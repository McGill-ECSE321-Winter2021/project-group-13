<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ca.ecse321.autorepairsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoRepairSystemAndroid">
        <activity
            android:name=".SignUp"
            android:label="Sign Up"
            android:theme="@style/Theme.AutoRepairSystemAndroid">
        </activity>
        <activity
            android:name=".LogIn"
            android:label="Auto Repair System"
            android:theme="@style/Theme.AutoRepairSystemAndroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerHomeActivity"
            android:label="Customer Home"
            android:theme="@style/Theme.AutoRepairSystemAndroid">
        </activity>
        <activity
            android:name=".DisplayAvailabilities"
            android:label="Display Availabilities"
            android:theme="@style/Theme.AutoRepairSystemAndroid"></activity>
    </application>

</manifest>